<div class="row">
  <div class="col-md-8">
    <%= render partial: 'votes/voter', locals: { topic: @topic, post: @post } %>
    <h1><%= markdown(@post.title) %></h1>
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    </small>
    <p> <%= image_tag(@post.image.url) if @post.image? %> </p>
    <p><%= markdown @post.body %></p>
  </div>
    <div class="col-md-4 post-info">
      <% if policy(@post).edit? %>
        <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-success' %>
      <% end %>
      <% if policy(@post).destroy? %>
        <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
      <% end %>
      <div>
        <h3><%= pluralize(@post.rank.to_i, 'point') %></h3>
        <small>
          <%= pluralize(@post.up_votes, 'up vote') %>, 
          <%= pluralize(@post.down_votes, 'down vote') %>
        </small>
      </div>
      <%= render partial: 'favorites/favorite', locals: { topic: @topic, post: @post } %>
    </div>
</div>
<div>
<hr>
</div>
<div class="col-md-12">
  <div class="col-md-1">
  </div>
  <div class="col-md-8">
    <%= render partial: "comments/form", locals: { topic: @topic, post: @post, comment: @comment, referer: @referer } %>
  </div>
  <div class="col-md-3">
  </div>
</div>
<div class="col-md-12">
  <div class="col-md-1">
  </div>
  <div class="col-md-8">
    <%= render partial: "comment", collection: @comments %>
  </div>
  <div class="col-md-3">
  </div>
</div>