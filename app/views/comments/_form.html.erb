<%= form_for [topic, post, comment] do |f| %>
  <% if flash[:comment_errors].present?  %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(flash[:comment_errors].count, "error") %>.</h4>
      <ul>
        <% flash[:comment_errors].each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag( flash[:comment_errors].present? ? flash[:comment_errors] : comment.errors[:body] ) do %>
    <%= f.label :comment %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter comment here..." %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>